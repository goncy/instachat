            <!-- Add your site or application content here -->
            <!-- Fixed navbar -->
            <nav class="navbar navbar-default navbar-fixed-top">
            	<div class="container">
            		<div class="navbar-header">
            			<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            				<span class="sr-only">Toggle navigation</span>
            				<span class="icon-bar"></span>
            				<span class="icon-bar"></span>
            				<span class="icon-bar"></span>
            			</button>
            			<a class="navbar-brand" href="http://getbootstrap.com/examples/sticky-footer-navbar/#"><%= title %></a>
            		</div>
            		<div id="navbar" class="navbar-collapse collapse" aria-expanded="false">
            			<ul class="nav navbar-nav navbar-right nmr">
            				<li>
            					<div class="navbar-form" role="search">
            						<div class="input-group">
            							<input id="sala_red" type="text" maxlength="20" class="form-control" placeholder="Crear sala">
            							<span class="input-group-btn">
            								<button type="submit" onclick="redirectSala();" class="btn btn-default active">Crear</button>
            							</span>
            						</div>
            					</div>
            				</li>
            				<li class="active"><a href="#" data-toggle="modal" data-target="#salaModal" type="button">Editar sala <span class="sr-only">(current)</span></a></li>
            			</ul>
            		</div><!--/.nav-collapse -->
            	</div>
            </nav>

            <!-- Begin page content -->
            <div class="container" style="padding-top: 50px; padding-left:0px; padding-right:0px">
            	<div id="chat" class="chat container">
            		<!-- Mensajes -->
            	</div>
            </div>
            <footer class="footer">
            	<div id="formcontainer" class="container npr npl">
            		<div class="row">
            			<div class="col-md-12">
            				<div class="input-group">
            					<span class="input-group-btn">
            						<button class="btn btn-default" data-toggle="modal" data-target="#configModal" type="button"><span class="glyphicon glyphicon-cog" aria-hidden="true"></span></button>
            						<button id="prv_dismiss" style="display: none;" class="btn btn-primary" alt="Cancelar mensaje privado" onclick="prvDismiss()" type="button"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></button>
            					</span>
            					<input id="msg_input" type="text" class="form-control" placeholder="Mensaje">
            					<input id="prv_name" type="text" hidden>
            					<input id="prv_id" type="text" hidden>
            					<span class="input-group-btn">
            						<button class="btn btn-default" onclick="emitir()" type="button">Enviar</button>
            					</span>
            				</div>
            			</div>
            		</div>
            	</div>
            </footer>

            <!-- Config Modal -->
			<div id="configModal" class="modal fade" role="dialog">
			  <div class="modal-dialog">
			    <!-- Modal content-->
			    <div class="modal-content">
			      <div class="modal-header">
			        <button type="button" class="close" data-dismiss="modal">&times;</button>
			        <h4 class="modal-title">Configuracion</h4>
			      </div>
			      <div class="modal-body">
			        <div class="input-group">
			        	<label for="c_name">Nombre:</label>
				      	<input id="c_name" type="text" class="form-control" maxlength="15" placeholder="Nombre" value="Anonimo">
				    </div>
				    <hr>
				    <div class="input-group">
					    <div class="checkbox">
						  <label><input type="checkbox" name="vehicle" id="c_sv_notif" checked>Recibir notificaciones del servidor</label>
						</div>
						<div class="checkbox">
						  <label><input type="checkbox" name="vehicle" id="c_cnx_notif" checked>Recibir notificaciones del des/conexiones</label>
						</div>
				    </div>
			      </div>
			      <div class="modal-footer">
			        <button type="button" class="btn btn-default" onclick="setData()" data-dismiss="modal">Guardar</button>
			      </div>
			    </div>
			  </div>
			</div>

            <!-- Pass Modal -->
			<div id="salaModal" class="modal fade" role="dialog">
			  <div class="modal-dialog">
			    <!-- Modal content-->
			    <div class="modal-content">
			      <div class="modal-header">
			        <button type="button" class="close" data-dismiss="modal">&times;</button>
			        <h4 class="modal-title">Editar sala</h4>
			      </div>
			      <div class="modal-body">
			        <div class="input-group">
			        	<label for="c_pass">Contraseña:</label>
				      	<input id="c_pass" type="password" class="form-control" placeholder="Contraseña" maxlength="15" value="">
				    </div>
				    <hr>
				    <div class="input-group">
			        	<label for="c_img_sala">Imagen de salon:</label>
				      	<input id="c_img_sala" type="text" class="form-control" placeholder="EJ: http://p1.pichost.me/i/5/1282860.jpg" value="">
				    </div>
				    <br>
			      <div class="modal-footer">
			        <button type="button" class="btn btn-default" onclick="setSala()" data-dismiss="modal">Establecer</button>
			      </div>
			    </div>
			  </div>
			</div>
            <script src="https://cdn.socket.io/socket.io-1.2.0.js"></script>
            <script src="https://code.jquery.com/jquery-2.1.4.min.js"></script>
            <script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
            <script src="public/js/io-handler.js"></script>

